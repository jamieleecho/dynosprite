 #!/usr/bin/env sh

case "$(uname -s)" in

   Darwin)
     docker-compose -f docker-compose.yml run --rm -w /home/dynosprite dynosprite bash
     ;;

   Linux)
     docker-compose -f docker-compose.yml run --rm -w /home/synopsrite dynosprite bash
     ;;

   CYGWIN*|MINGW32*|MSYS*)
     echo 'MS Windows not supported yet'
     ;;

   # Add here more strings to compare
   # See correspondence table at the bottom of this answer

   *)
     echo 'Unknown OS not supported' 
     ;;
esac

